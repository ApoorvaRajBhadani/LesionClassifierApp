<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hello,\n How can we take care of you?"
        />

    <Button
        android:id="@+id/add_image_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Scan for skin infection"/>

    <Button
        android:id="@+id/nearby_doctors_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Find Nearby Doctors"/>
    <Button
        android:id="@+id/medi_blogs_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Read Medi Blogs"/>


</LinearLayout>